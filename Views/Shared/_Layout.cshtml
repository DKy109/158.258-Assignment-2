<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Book Library</title>

    <!-- Custom CSS -->
    <link href="~/Content/Site.css" rel="stylesheet" />

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="~/Scripts/site.js"></script>

    <!-- Page-specific scripts -->
    @RenderSection("scripts", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-book-open"></i> Book Library
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                           href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Books" ? "active" : "")"
                           href="@Url.Action("Index", "Books")">
                            <i class="fas fa-book"></i> Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">
                            <i class="fas fa-info-circle"></i> About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">
                            <i class="fas fa-envelope"></i> Contact
                        </a>
                    </li>
                </ul>

                <!-- Search Form in Navbar -->
                <form class="d-flex" action="@Url.Action("Index", "Books")" method="get">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="Search books..." aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="margin-top: 80px;">
        @RenderBody()

        <hr />

        <footer class="mt-5">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; @DateTime.Now.Year - Book Library MVC Application</p>
                    <p>Computer Science & Information Technology Project</p>
                </div>
                <div class="col-md-6 text-end">
                    <p>
                        <a href="https://validator.w3.org/check?uri=referer" target="_blank" class="text-decoration-none">
                            <i class="fas fa-check-circle"></i> HTML5 Validator
                        </a> |
                        <a href="https://jigsaw.w3.org/css-validator/check/referer" target="_blank" class="text-decoration-none">
                            <i class="fas fa-check-circle"></i> CSS Validator
                        </a> |
                        <a href="mailto:contact@booklibrary.com" class="text-decoration-none">
                            <i class="fas fa-envelope"></i> Contact Us
                        </a>
                    </p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>