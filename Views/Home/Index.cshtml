@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron bg-gradient-primary text-white py-5 rounded shadow">
    <div class="container">
        <h1 class="display-4">Welcome to Book Library</h1>
        <p class="lead">A comprehensive book management system built with ASP.NET MVC</p>
        <hr class="my-4" style="background-color: white;">
        <p>Explore our collection, search for books, and manage your reading list.</p>
        <a href="@Url.Action("Index", "Books")" class="btn btn-light btn-lg">
            <i class="fas fa-book-open me-2"></i> Browse Books
        </a>
        <a href="@Url.Action("Create", "Books")" class="btn btn-outline-light btn-lg ms-2">
            <i class="fas fa-plus me-2"></i> Add New Book
        </a>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100 shadow-hover">
                <div class="card-body">
                    <i class="fas fa-search fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Search & Discover</h3>
                    <p class="card-text">Find books by title, author, category, or ISBN with our advanced search system.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center h-100 shadow-hover">
                <div class="card-body">
                    <i class="fas fa-sort fa-3x text-success mb-3"></i>
                    <h3 class="card-title">Sort & Filter</h3>
                    <p class="card-text">Sort books by price, year, rating, or filter by categories and price ranges.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-center h-100 shadow-hover">
                <div class="card-body">
                    <i class="fas fa-chart-bar fa-3x text-warning mb-3"></i>
                    <h3 class="card-title">Statistics & Reports</h3>
                    <p class="card-text">View detailed statistics and export book data in multiple formats.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Books Section -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3 class="mb-4 text-center">Featured Books</h3>
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card h-100 text-center">
                        <img src="https://picsum.photos/id/24/300/400" class="card-img-top" alt="Book cover">
                        <div class="card-body">
                            <h5 class="card-title">The Great Gatsby</h5>
                            <p class="card-text">F. Scott Fitzgerald</p>
                            <a href="@Url.Action("Index", "Books")" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 text-center">
                        <img src="https://picsum.photos/id/25/300/400" class="card-img-top" alt="Book cover">
                        <div class="card-body">
                            <h5 class="card-title">To Kill a Mockingbird</h5>
                            <p class="card-text">Harper Lee</p>
                            <a href="@Url.Action("Index", "Books")" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 text-center">
                        <img src="https://picsum.photos/id/26/300/400" class="card-img-top" alt="Book cover">
                        <div class="card-body">
                            <h5 class="card-title">1984</h5>
                            <p class="card-text">George Orwell</p>
                            <a href="@Url.Action("Index", "Books")" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card h-100 text-center">
                        <img src="https://picsum.photos/id/27/300/400" class="card-img-top" alt="Book cover">
                        <div class="card-body">
                            <h5 class="card-title">Pride and Prejudice</h5>
                            <p class="card-text">Jane Austen</p>
                            <a href="@Url.Action("Index", "Books")" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works Section -->
    <div class="row mt-5 bg-light py-5 rounded">
        <div class="col-md-12 text-center">
            <h3 class="mb-5">How It Works</h3>
        </div>
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <div class="display-4 mb-3 text-primary">?</div>
                <h4>Browse Books</h4>
                <p class="mt-2">Explore our vast collection of books across various categories.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <div class="display-4 mb-3 text-success">?</div>
                <h4>Search & Filter</h4>
                <p class="mt-2">Find exactly what you're looking for with our powerful search tools.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="text-center">
                <div class="display-4 mb-3 text-warning">?</div>
                <h4>Add & Manage</h4>
                <p class="mt-2">Easily add new books and manage your collection.</p>
            </div>
        </div>
    </div>
</div>